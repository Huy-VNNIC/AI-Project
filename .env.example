# Environment Configuration for Data Pulling & API

# =============================================================================
# Jira Configuration (Atlassian Cloud)
# =============================================================================
# Get API token from: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_BASE_URL=https://yourcompany.atlassian.net
JIRA_EMAIL=your.email@company.com
JIRA_API_TOKEN=your_jira_api_token_here

# JQL Query to filter issues (default: last 1 year)
JIRA_JQL=project = YOUR_PROJECT AND created >= -365d

# =============================================================================
# Trello Configuration
# =============================================================================
# Get keys from: https://trello.com/app-key
TRELLO_API_KEY=your_trello_api_key
TRELLO_TOKEN=your_trello_token

# Board IDs (comma-separated for multiple boards)
TRELLO_BOARD_IDS=board_id_1,board_id_2

# =============================================================================
# FastAPI Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Log directory
LOG_DIR=logs/api

# =============================================================================
# Model Configuration
# =============================================================================
MODEL_DIR=requirement_analyzer/models/task_gen/models
DEFAULT_MODE=model
DEFAULT_THRESHOLD=0.5
MAX_TASKS_LIMIT=200

# =============================================================================
# Data Storage
# =============================================================================
# Output directory for crawled data
DATA_OUTPUT_DIR=data/external
FEEDBACK_DB=data/feedback.db

# =============================================================================
# Security
# =============================================================================
# Set to 'production' to enable additional security checks
ENVIRONMENT=development

# API rate limiting
RATE_LIMIT_PER_MINUTE=60
